<!DOCTYPE html>
<html>
  <head>
    <title>Menyu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body><header class="border-bottom border-dark border-3" >
      <nav class="navbar navbar-expand-1g navbar-light">
        <div>
          
        </div>
        <div class="text-right">
        <ul class="navbar-nav list-group-horizontal" >
          <% if admin_signed_in? %>
          <li class="nav-item mr-5">
            <%= link_to "レビュー一覧", admin_posts_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "会員一覧", admin_customers_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "とっぷ", admin_root_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-light" %>
          </li>
          <% elsif customer_signed_in? %>
          <div class="mr-5">
          ようこそ、
            <%= current_customer.nickname %>
            さん！
          </div>
          <li class="nav-item mr-5">
            <%= link_to "マイページ", my_page_customers_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "投稿", posts_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "新規投稿", new_post_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-light" %>
          </li>
          <% else %>
          
          <li class="nav-item mr-5">
            <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-light" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "ログイン", new_customer_session_path, class:"btn btn-light" %>
          </li>
          <% end %>
        </ul>
        </div>
      </nav>
    </header>
    <main class="m-5">
    <%= yield %>
    </main>
    <footer class="border-top border-dark border-3 mt-auto">
      <div>　menyu　</div>
    </footer>
  </body>
</html>
