<div class="container">
  <div class="row">
    <div class="col-10">
      <h4 class="ml-5 mb-5">店情報新規登録</h4>
      <div class="d-flex">
      <div class="col-2"></div>
      <%= form_with model: @shop_info, url: admin_shop_info_path do |f| %>
      <table class="col-12">
            <th><%= f.label "店名" %></th>
            <td><%= f.text_field :name, class:"form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label "住所" %></th>
            <td><%= f.text_area :shop_address, class:"form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label "URL" %></th>
            <td><%= f.text_field :shop_url, class:"form_control" %></td>
          </tr>
      </table>
        <p class="text-center"><%= f.submit "変更を保存", method: :patch, class:"btn btn-success col-3" %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>