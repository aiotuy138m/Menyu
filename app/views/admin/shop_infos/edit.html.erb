<% if current_admin %>
  <div class="container">
    <div class="row">
      <div class="col-10">
        <h4 class="ml-5 mb-5">店情報編集</h4>
        <div class="d-flex">
          <div class="col-2"></div>
          <%= form_with model: @shop_info, url: admin_shop_info_path do |f| %>
            <table class="col-12">
              <tr>
                <th><%= f.label "店名" %></th>
                <td><%= f.text_field :shop_name, class:"form-control" %></td>
              </tr>
              <tr>
                <th><%= f.label "住所" %></th>
                <td><%= f.text_area :address, class:"form-control" %></td>
              </tr>
              <tr>
                <th><%= f.label "URL" %></th>
                <td><%= f.text_field :shop_url, class:"form_control" %></td>
              </tr>
              <tr>
                <th><%= f.label "緯度" %></th>
                <td><%= f.text_field :latitude, class:"form_control" %></td>
              </tr>
              <tr>
                <th><%= f.label "経度" %></th>
                <td><%= f.text_field :longitude, class:"form_control" %></td>
              </tr>
            </table>
            <p class="text-center"><%= link_to "戻る", :back, class:"btn btn-info" %>　<%= f.submit "変更を保存", method: :patch, class:"btn btn-success" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= render 'admin/admin_only' %>
<% end %>