<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h3 class="page-title">通報詳細</h3>
      <table class="table">
        <tr>
          <td>通報ID</td>
          <td>
            <%= link_to admin_post_path(@post) do %>
              <%= @report.id %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>会員名</td>
          <td><%= @report.reported.customer.nickname %></td>
        </tr>
        <tr>
          <td>理由</td>
          <td><%= @report.reason %></td>
        </tr>
        <tr>
          <td>通報者</td>
          <td><%= @report.reporter.customer.nickname %></td>
        </tr>
      </table>
    </div>
  </div>
</div>