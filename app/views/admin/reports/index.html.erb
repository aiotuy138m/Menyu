<% if current_admin %>
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>通報一覧</h3>

        <table class="table">
          <tr>
            <th>通報ID</th>
            <th>該当レビューID</th>
            <th>通報者ID</th>
          </tr>
        <% @reports.each do |report| %>
          <tr>
            <td>
              <%= link_to report.id, admin_report_path(report) %>
            </td>
            <td>
              <%= report.reported_id %>
            </td>
            <td>
              <%= report.reporter_id %>
            </td>
          </tr>
        <% end %>
        </table>
        <%= paginate @reports %>
      </div>
    </div>
  </div>
<% else %>
  <%= render 'admin/admin_only' %>
<% end %>