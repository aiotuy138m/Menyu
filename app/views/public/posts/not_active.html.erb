<h4>非公開一覧</h4>
<% if !@posts.exists? %>
 <h2>非公開設定の投稿はありません。</h2>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <% @posts.each do |posts| %>
          <div>
            <%= link_to post_path(posts.id) do %>
              <%= image_tag posts.get_image(500, 500) %>
            <% end %>
          </div>
        <table class="table table-borderless">
          <tr>
            <th style="width: 20%">メニュー名</th>
            <td><%= posts.menu %></td>
            <td></td>
          </tr>
          <tr>
            <th style="width: 20%">ジャンル</th>
            <td class="text-primary">
              <% posts.genres.each do |genre| %>
                #<%= link_to genre.name, posts_path(genre_id: genre.id) %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th style="width: 20%">評価</th>
            <td><%= "★" * (posts.rate).to_i %></td>
            <td></td>
          </tr>
          <tr>
            <th style="width: 20%">コメント・メモ</th>
            <td><%= posts.comment %></td>
            <td></td>
          </tr>
          <tr>
            <th style="width: 20%">店名</th>
            <td><%= posts.shop_info.name %></td>
            <td></td>
          </tr>
          <tr>
            <th style="width: 20%"></th>
            <td>♥<%= posts.favorites.count %></td>
            <td><%= link_to '編集する', edit_post_path(posts.id), class:"btn btn-success" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
<% end %>