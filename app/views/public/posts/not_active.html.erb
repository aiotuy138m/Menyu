<% if !@posts.exists? %>
 <h2>非公開設定の投稿はありません。</h2></br>
 <%= link_to '戻る', :back, class:"btn btn-info mt-4" %>
<% else %>
<h4>非公開一覧</h4>
  <div class="container">
    <div class="row">
        <div class="col-8 mx-auto" style="width: 200px;">
          <%= render 'layouts/new' %>
          <%= render 'public/posts/post-index', posts: @posts %>
    　　　　  <%= link_to '戻る', :back, class:"btn btn-info mt-4" %>
  　　　　  </div>
      </div>
    </div>
  </div>
<% end %>