<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h5>投稿画面</h5>
      <%= form_with model: @post do |f| %>
      <table class="table tablebordered">
        <tr>
          <th>投稿画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>評価</th>
          <td>
            <%= f.radio_button :rate, 1 %>
            
            <input id="review01" type="radio" name="post[rate]" value="1"><label for="review01">★</label>
            <input id="review02" type="radio" name="post[rate]" value="2"><label for="review02">★</label>
            <input id="review03" type="radio" name="post[rate]" value="3"><label for="review03">★</label>
            <input id="review04" type="radio" name="post[rate]" value="4"><label for="review04">★</label>
            <input id="review05" type="radio" name="post[rate]" value="5"><label for="review05">★</label>
          </td>
        </tr>
        <tr>
          <th>コメント・メモ</th>
          <td><%= f.text_area :comment %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
