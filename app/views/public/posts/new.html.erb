<div class="container">
  <div class="row">
    <div class="col-8 mx-auto" style="width: 200px;">
      <h5>新規投稿画面</h5>
      <%= form_with model: @post do |f| %>
      <ul class="list-unstyled ml-3">
          <li>
            <%= f.radio_button :select_shop, 0 %>
            <%= f.label "登録済みの店から選択" %></br>
            <p class="ml-3 col-12"><%= f.select :shop_info_id, options_from_collection_for_select(ShopInfo.all, :id, :shop_name), { include_blank: "--選択してください--" }, class:"custom-select col-12" %></p>
          </li>
          <%= f.radio_button :select_shop, 1 %>
          <%= f.label "新しくお店を登録" %>
          <li>
            <table class="ml-3 table table-borderless talbe-sm">
              <tr>
                <th class="col-4">店名</th>
                <td>
                  <%= f.text_field :shop_name %>
                </td>
                <td></td><td></td><td></td>
              </tr>
              <tr>
                <th class="col-4">店の住所</th>
                <td colspan="4">
                  <%= f.text_field :address, class:"col-12" %>
                </td>
              </tr>
              <tr>
                <th class="col-4">店のHP等URL</th>
                <td>
                  <%= f.text_field :shop_url %>
                </td>
                <td></td><td></td><td></td>
              </tr>
            </table>
          </li>
      </ul>
      <table class="table table-borderless">
        <tr>
          <th style="width: 20%">投稿画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th style="width: 20%">メニュー名</th>
          <td><%= f.text_field :menu %></td>
        </tr>
        <tr>
          <th style="width: 20%">評価</th>
          <td>
            　1〜5<br>
            <input type="range" class="form-contro-l-range" id="rate" type="radio" name="post[rate]" value="3" min="0" max="5" step="0.5"><label for="review01"></label>
          </td>
        </tr>
        <tr>
          <th style="width: 20%">ジャンル</th>
          <td>
            <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |genre| %>
              <%= genre.label do %>
                <%= genre.check_box %>
                <%= genre.text %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th style="width: 20%">感想</th>
          <td><%= f.text_area :comment %></td>
        </tr>
        <tr>
          <th style="width: 20%"><%= f.label "公開設定" %></th>
          <td>
            <%= f.radio_button :post_status, true, style: "accent-color:black;",checked: true %>
            <%= f.label :post_status, "公開", value: true %>
            <%= f.radio_button :post_status, false, class:"ml-5", style: "accent-color:black;" %>
            <%= f.label :post_status, "非公開", value: false %>
          </td>
          </tr>
      </table>
      <div class="container text-center"><%= f.submit '投稿', class:"btn btn-lg btn-success mt-4 col-3" %></div>
      <% end %>
      <%= link_to '戻る', :back, class:"btn btn-info mt-4" %>
    </div>
  </div>
</div>
