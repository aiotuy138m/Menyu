<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= form_with model: @post do |f| %>
      <table class="table tablebordered">
        <tr>
          <th>投稿画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>評価</th>
          <td><%= f.text_field :star %></td>
        </tr>
        <tr>
          <th>コメント・メモ</th>
          <td><%= f.text_area :comment %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>