<div class="container">
  <div class="row">
    <div class="col-8">
    <!--ゲストには編集させない-->
    <% if @customer.email == 'guest@example.com' %>
      <p>ゲストはユーザー情報の編集はできません。</p>
    <% else %>
      <h4 class="ml-5 mb-3">会員情報編集</h4>
      <%= form_with model: @customer, url: information_customers_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label "ニックネーム" %></th>
          <td>
            <%= f.text_field :nickname %>
          </td>
        </tr>
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
      <table class="table table-borderless ml-5">
        <tr>
          <td class="col-2"></td>
          <td><%= f.submit "編集内容を保存", url: information_customers_path, method: :patch, class:"btn btn-success col-8" %></td>
          <td><%= link_to "退会する", confirm_customers_path, class:"btn btn-danger col-5" %></td>
        </tr>
      </table>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
