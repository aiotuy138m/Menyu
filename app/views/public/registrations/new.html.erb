<!--新規会員登録画面-->
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="ml-5 mb-5">新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table>
          <tr>
            <th><%= f.label "ニックネーム" %></th>
            <td><%= f.text_field :nickname, autofocus: true %></td>
          </tr>

          <tr>
            <th><%= f.label "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr class="field">
            <th>
              <% if @minimum_password_length %>
                <p>パスワード(<%= @minimum_password_length %> 文字以上)</p>
              <% end %>
            </th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <th><%= f.label "パスワード(確認用)" %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <th></th>
            <td><%= f.submit "新規登録", class:"ml-5 col-6 text-center btn btn-success btn-block" %></td>
          </tr>
        </table>

      <% end %>

      <div class="ml-4 mt-4">
        <h4>既に登録済みの方</h4>
        <p class="ml-3">
          <%= link_to "こちら", customer_session_path, class:"border-bottom border-primary" %> 　からログインしてください
        </p>
      </div>
    </div>
  </div>
</div>
