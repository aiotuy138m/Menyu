<section class="inner">
  <h2 class="section-ttl">パスワード編集</h2>

  <%= form_with model: @customer, url: customer_registration_path, id: 'edit_user', class: 'edit_user', local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="field mb2">
      <%= f.label :current_password, "現在のパスワード" %></br>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="field mb2">
      <%= f.label :password, "新しいパスワード(#{@minimum_password_length}文字以上)" %></br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mb2">
      <%= f.label :password_confirmation, "新しいパスワード(確認用)" %></br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


    <div class="actions">
      <%= link_to '戻る', my_page_customers_path, class:"btn btn-info col-1" %>
      <%= f.submit "パスワード更新", class: "btn btn-success" %>
    </div>
  <% end %>
</section>